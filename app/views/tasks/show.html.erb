<p style="color: green"><%= notice %></p>

<div class="container my-4" style="max-width: 600px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= @task.title %></h5>
      <p class="card-text text-muted">
        <%= t('activerecord.attributes.task.created_at') %>: <%= l @task.created_at, format: :short %>
      </p>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to t('tasks.edit.title'), edit_task_path(@task), class: "btn btn-outline-dark" %>
        <%= link_to t('tasks.back'), tasks_path, class: "btn btn-outline-secondary" %>
        <%= button_to t('tasks.destroy.title'), @task, method: :delete, class: "btn btn-outline-secondary", data: { turbo_confirm: t('tasks.destroy.confirm') } %>
      </div>
    </div>
  </div>
</div>